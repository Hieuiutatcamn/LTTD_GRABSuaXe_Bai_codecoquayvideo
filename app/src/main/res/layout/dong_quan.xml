<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_coner">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_quan"
        app:srcCompat="@drawable/quan_haichau"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imageview_quan"
        >

     <TextView
         android:id="@+id/ten_quan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Quận Hải châu"
         android:textStyle="bold"
         android:textSize="17dp"
         android:layout_marginLeft="20dp"
         />

        <TextView
            android:id='@+id/mota_quan'
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Khu vực trung tâm với nhiều chi nhánh cửa hàng"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</RelativeLayout>